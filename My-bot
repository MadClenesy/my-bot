from telegram import Update, KeyboardButton, ReplyKeyboardMarkup
from telegram.ext import (
    Updater,
    CommandHandler,
    MessageHandler,
    Filters,
    ConversationHandler,
    CallbackContext,
)

# üîë –ù–∞—Å—Ç—Ä–æ–π–∫–∏
TOKEN = "7583697893:AAHpDzwKtpuNarQzowb2bsyuaiFvtnO67V8"
ADMIN_CHAT_ID = 361835441  # —Å–≤–æ–π Telegram ID (—É–∑–Ω–∞—Ç—å —á–µ—Ä–µ–∑ @userinfobot)

# –≠—Ç–∞–ø—ã –¥–∏–∞–ª–æ–≥–∞
PROJECT, TEAM = range(2)

# ---------------------------------
# /start ‚Äî –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–µ–Ω–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
# ---------------------------------
def start(update: Update, context: CallbackContext):
    text = (
        "üëã –ü—Ä–∏–≤–µ—Ç! –≠—Ç–æ –±–æ—Ç –ø—Ä–æ–µ–∫—Ç–∞ ¬´–ì–∞–≤–∞–Ω—å¬ª.\n\n"
        "–ó–¥–µ—Å—å –º–æ–∂–Ω–æ:\n"
        "üöÄ –ø—Ä–µ–¥–ª–æ–∂–∏—Ç—å —Å–≤–æ–π –ø—Ä–æ–µ–∫—Ç\n"
        "ü§ù –ø—Ä–∏—Å–æ–µ–¥–∏–Ω–∏—Ç—å—Å—è –∫ –∫–æ–º–∞–Ω–¥–µ\n"
        "üí¨ –∑–∞–¥–∞—Ç—å –≤–æ–ø—Ä–æ—Å –∏–ª–∏ –ø–æ–¥–µ–ª–∏—Ç—å—Å—è –∏–¥–µ–µ–π\n\n"
        "–í—ã–±–µ—Ä–∏, —á—Ç–æ —Ö–æ—á–µ—à—å —Å–¥–µ–ª–∞—Ç—å üëá\n\n"
        "/project ‚Äì –ø—Ä–µ–¥–ª–æ–∂–∏—Ç—å –ø—Ä–æ–µ–∫—Ç\n"
        "/team ‚Äì —Ö–æ—á—É –≤ –∫–æ–º–∞–Ω–¥—É\n"
        "/help ‚Äì –ø–æ–º–æ—â—å"
    )
    update.message.reply_text(text)

# ---------------------------------
# /project ‚Äî –ø—Ä–µ–¥–ª–æ–∂–∏—Ç—å –ø—Ä–æ–µ–∫—Ç
# ---------------------------------
def project(update: Update, context: CallbackContext):
    update.message.reply_text(
        "–û—Ç–ø—Ä–∞–≤—å –∫–æ—Ä–æ—Ç–∫–æ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ –ø—Ä–æ–µ–∫—Ç–µ. –ú–æ–∂–Ω–æ —Ç–µ–∫—Å—Ç–æ–º –∏–ª–∏ —Ñ–∞–π–ª–æ–º (–ø—Ä–µ–∑–µ–Ω—Ç–∞—Ü–∏—è, –æ–ø–∏—Å–∞–Ω–∏–µ, —Å—Å—ã–ª–∫–∞).\n\n"
        "–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, —É–∫–∞–∂–∏:\n"
        "1. üìã –ù–∞–∑–≤–∞–Ω–∏–µ –∏ –∫–æ—Ä–æ—Ç–∫–æ–µ –æ–ø–∏—Å–∞–Ω–∏–µ –ø—Ä–æ–µ–∫—Ç–∞\n"
        "2. üß© –ù–∞ –∫–∞–∫–æ–π —Å—Ç–∞–¥–∏–∏ —Å–µ–π—á–∞—Å (–∏–¥–µ—è / –ø–æ–¥–≥–æ—Ç–æ–≤–∫–∞ / –≤ –ø—Ä–æ—Ü–µ—Å—Å–µ / –∑–∞–ø—É—â–µ–Ω)\n"
        "3. üí° –ö–∞–∫–∞—è –ø–æ–º–æ—â—å –Ω—É–∂–Ω–∞ (—Ä–µ—Å—É—Ä—Å—ã, —Å–≤—è–∑–∏, –∫–æ–Ω—Å—É–ª—å—Ç–∞—Ü–∏—è –∏ —Ç.–¥.)\n"
        "4. üìé –ú–∞—Ç–µ—Ä–∏–∞–ª—ã, –µ—Å–ª–∏ –µ—Å—Ç—å (CV, —Ç–∏–∑–µ—Ä, –ø—Ä–µ–∑–µ–Ω—Ç–∞—Ü–∏—è)\n"
        "5. üìû –ö–æ–Ω—Ç–∞–∫—Ç—ã –∏ –∏–º—è –¥–ª—è —Å–≤—è–∑–∏\n\n"
        "–ü–æ—Å–ª–µ —ç—Ç–æ–≥–æ –∫–æ–º–∞–Ω–¥–∞ ¬´–ì–∞–≤–∞–Ω–∏¬ª —Å–≤—è–∂–µ—Ç—Å—è —Å —Ç–æ–±–æ–π, –∫–æ–≥–¥–∞ –ø–æ—è–≤–∏—Ç—Å—è –ø–æ–¥—Ö–æ–¥—è—â–µ–µ –æ–∫–Ω–æ –¥–ª—è –æ–±—Å—É–∂–¥–µ–Ω–∏—è."
    )
    return PROJECT


def project_received(update: Update, context: CallbackContext):
    message = update.message
    if message.text:
        context.bot.send_message(
            chat_id=ADMIN_CHAT_ID,
            text=f"üì© –ù–æ–≤–∞—è –∑–∞—è–≤–∫–∞ –Ω–∞ –ø—Ä–æ–µ–∫—Ç:\n\n{message.text}\n\n–û—Ç: @{message.from_user.username or message.from_user.full_name}",
        )
    elif message.document:
        message.forward(chat_id=ADMIN_CHAT_ID)

    message.reply_text("‚úÖ –°–ø–∞—Å–∏–±–æ! –ó–∞—è–≤–∫–∞ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–∞ –∫–æ–º–∞–Ω–¥–µ ¬´–ì–∞–≤–∞–Ω—å¬ª. üåä")
    return ConversationHandler.END

# ---------------------------------
# /team ‚Äî —Ö–æ—á—É –≤ –∫–æ–º–∞–Ω–¥—É
# ---------------------------------
def team(update: Update, context: CallbackContext):
    update.message.reply_text(
        "–û—Ç–ª–∏—á–Ω–æ! –ú—ã —Ä–∞–¥—ã, —á—Ç–æ —Ö–æ—á–µ—à—å —Å—Ç–∞—Ç—å —á–∞—Å—Ç—å—é –∫–æ–º–∞–Ω–¥—ã ¬´–ì–∞–≤–∞–Ω—å¬ª.\n\n"
        "–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –æ—Ç–ø—Ä–∞–≤—å –∫–æ—Ä–æ—Ç–∫—É—é –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ —Å–µ–±–µ:\n"
        "1. üôã –ò–º—è\n"
        "2. üíº –ß–µ–º –∑–∞–Ω–∏–º–∞–µ—à—å—Å—è (–∏–ª–∏ —Ö–æ—á–µ—à—å –∑–∞–Ω–∏–º–∞—Ç—å—Å—è)\n"
        "3. üéØ –ö–∞–∫—É—é —Ä–æ–ª—å –≤–∏–¥–∏—à—å –¥–ª—è —Å–µ–±—è –≤ –ø—Ä–æ–µ–∫—Ç–µ\n"
        "4. üß∞ –ß–µ–º –º–æ–∂–µ—à—å –ø–æ–º–æ—á—å (–Ω–∞–≤—ã–∫–∏, –æ–ø—ã—Ç, —Ä–µ—Å—É—Ä—Å—ã)\n"
        "5. üìé CV –∏–ª–∏ –ø–æ—Ä—Ç—Ñ–æ–ª–∏–æ (–µ—Å–ª–∏ –µ—Å—Ç—å)\n"
        "6. üìû –ö–æ–Ω—Ç–∞–∫—Ç—ã –¥–ª—è —Å–≤—è–∑–∏\n\n"
        "–ü–æ—Å–ª–µ –ø–æ–ª—É—á–µ–Ω–∏—è –∞–Ω–∫–µ—Ç—ã –º—ã —Å–≤—è–∂–µ–º—Å—è, –∫–∞–∫ —Ç–æ–ª—å–∫–æ –ø–æ—è–≤–∏—Ç—Å—è —Ä–µ–ª–µ–≤–∞–Ω—Ç–Ω–∞—è –∑–∞–¥–∞—á–∞."
    )
    return TEAM


def team_received(update: Update, context: CallbackContext):
    message = update.message
    if message.text:
        context.bot.send_message(
            chat_id=ADMIN_CHAT_ID,
            text=f"üë• –ù–æ–≤–∞—è –∞–Ω–∫–µ—Ç–∞ –≤ –∫–æ–º–∞–Ω–¥—É:\n\n{message.text}\n\n–û—Ç: @{message.from_user.username or message.from_user.full_name}",
        )
    elif message.document:
        message.forward(chat_id=ADMIN_CHAT_ID)

    message.reply_text("üí´ –°–ø–∞—Å–∏–±–æ! –ú—ã –ø–æ–ª—É—á–∏–ª–∏ —Ç–≤–æ—é –∞–Ω–∫–µ—Ç—É. –°–∫–æ—Ä–æ —Å–≤—è–∂–µ–º—Å—è.")
    return ConversationHandler.END

# ---------------------------------
# /help ‚Äî —Å–ø—Ä–∞–≤–∫–∞
# ---------------------------------
def help_command(update: Update, context: CallbackContext):
    update.message.reply_text(
        "–ï—Å–ª–∏ —á—Ç–æ-—Ç–æ –Ω–µ —Ä–∞–±–æ—Ç–∞–µ—Ç –∏–ª–∏ —Ö–æ—á–µ—à—å –∑–∞–¥–∞—Ç—å –≤–æ–ø—Ä–æ—Å ‚Äî –Ω–∞–ø–∏—à–∏ —Å—é–¥–∞ –∏–ª–∏ –Ω–∞ –ø–æ—á—Ç—É üìß info@havan.team\n"
        "–ö–æ–º–∞–Ω–¥–∞ ¬´–ì–∞–≤–∞–Ω–∏¬ª –æ—Ç–≤–µ—á–∞–µ—Ç –≤—Ä—É—á–Ω—É—é."
    )

# ---------------------------------
# –ó–∞–ø—É—Å–∫
# ---------------------------------
def main():
    updater = Updater(TOKEN, use_context=True)
    dp = updater.dispatcher

    # –î–∏–∞–ª–æ–≥–∏
    project_conv = ConversationHandler(
        entry_points=[CommandHandler("project", project)],
        states={PROJECT: [MessageHandler(Filters.all, project_received)]},
        fallbacks=[],
    )

    team_conv = ConversationHandler(
        entry_points=[CommandHandler("team", team)],
        states={TEAM: [MessageHandler(Filters.all, team_received)]},
        fallbacks=[],
    )

    # –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫–æ–º–∞–Ω–¥
    dp.add_handler(CommandHandler("start", start))
    dp.add_handler(project_conv)
    dp.add_handler(team_conv)
    dp.add_handler(CommandHandler("help", help_command))

    print("ü§ñ –ë–æ—Ç '–ì–∞–≤–∞–Ω—å' –∑–∞–ø—É—â–µ–Ω (—Å—Ç–∞—Ä—ã–π API).")
    updater.start_polling()
    updater.idle()


if __name__ == "__main__":
    main()

